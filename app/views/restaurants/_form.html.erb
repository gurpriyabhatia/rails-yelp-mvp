<%= form_for(@restaurant) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :"name", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, options_for_select(%w(chinese italian japanese french belgian)), { }, {class: 'form-control'} %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
